function selectContainer() {
  if [ -z $1 ]; then
    container_info=`docker container ps --format "table {{.ID}}\t{{.Names}}\t{{.Image}}" | fzf`;
  else
    container_info=`docker container ps --format "table {{.ID}}\t{{.Names}}\t{{.Image}}" | grep $1 | head -n 1`;
  fi
  if [ -z $container_info ]; then
    echo "no container specified";
    return 1;
  fi;
  container_id=`echo $container_info | awk '{print $1}'`
}

function docrm() {
  selectContainer "$@"
  docker kill $container_id && docker rm $container_id
}

function dockill() {
  selectContainer "$@"
  docker kill $container_id;
}

function docsh() {
  selectContainer "$@"
  docker exec -it $container_id /bin/sh
}

function doclogs() {
  rest="${@:2}";
  selectContainer "$@"
  eval "docker logs -f $container_id $rest"
}

function docinspect() {
  selectContainer "$@"
  docker inspect $container_id
}

