}

function poddelete() {
  line=`kubectl get pods --all-namespaces -o wide | fzf`
  pod=`echo $line | awk '{print $2}'`
  namespace=`echo $line | awk '{print $1}'`
  kubectl delete pod $pod --namespace=$namespace
}

function delete_service() {
